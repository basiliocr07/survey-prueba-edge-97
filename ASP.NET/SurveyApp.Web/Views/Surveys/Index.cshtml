
@model List<SurveyApp.Web.Models.SurveyViewModel>
@{
    ViewData["Title"] = "Survey Management";
}

<div class="min-h-screen bg-background">
    <div class="container mx-auto pt-20 pb-10 px-4 md:px-6">
        <div class="flex flex-col space-y-6">
            <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
                <div>
                    <h1 class="text-3xl font-bold tracking-tight">Survey Management</h1>
                    <p class="text-muted-foreground mt-1">Create and manage your surveys</p>
                </div>
                
                <div class="flex items-center gap-2">
                    <a asp-controller="Surveys" asp-action="Create" class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 bg-primary text-primary-foreground hover:bg-primary/90 h-10 px-4 py-2">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-file-plus mr-2 h-4 w-4"><path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"></path><polyline points="14 2 14 8 20 8"></polyline><line x1="12" y1="18" x2="12" y2="12"></line><line x1="9" y1="15" x2="15" y2="15"></line></svg>
                        Create Survey
                    </a>
                </div>
            </div>

            <div class="rounded-lg border bg-card text-card-foreground shadow-sm">
                <div class="border-b p-3">
                    <div class="flex gap-2 overflow-x-auto pb-1">
                        <a asp-controller="Surveys" asp-action="Filter" asp-route-filter="all" class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 h-10 px-4 py-2 @(ViewBag.FilterActive == "all" ? "bg-primary text-primary-foreground hover:bg-primary/90" : "border border-input bg-background hover:bg-accent hover:text-accent-foreground")">
                            All Surveys
                        </a>
                        <a asp-controller="Surveys" asp-action="Filter" asp-route-filter="active" class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 h-10 px-4 py-2 @(ViewBag.FilterActive == "active" ? "bg-primary text-primary-foreground hover:bg-primary/90" : "border border-input bg-background hover:bg-accent hover:text-accent-foreground")">
                            Active
                        </a>
                        <a asp-controller="Surveys" asp-action="Filter" asp-route-filter="draft" class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 h-10 px-4 py-2 @(ViewBag.FilterActive == "draft" ? "bg-primary text-primary-foreground hover:bg-primary/90" : "border border-input bg-background hover:bg-accent hover:text-accent-foreground")">
                            Draft
                        </a>
                        <a asp-controller="Surveys" asp-action="Filter" asp-route-filter="archived" class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 h-10 px-4 py-2 @(ViewBag.FilterActive == "archived" ? "bg-primary text-primary-foreground hover:bg-primary/90" : "border border-input bg-background hover:bg-accent hover:text-accent-foreground")">
                            Archived
                        </a>
                    </div>
                </div>
                
                @if (Model.Count > 0)
                {
                    <div class="p-0">
                        <ul class="divide-y">
                            @foreach (var survey in Model)
                            {
                                <li class="p-4 hover:bg-accent/20 transition-colors">
                                    <div class="flex items-center justify-between">
                                        <div class="flex-grow">
                                            <div class="flex items-center justify-between mb-1">
                                                <h3 class="font-medium">@survey.Title</h3>
                                                <div class="flex items-center gap-2">
                                                    <span class="bg-status-@survey.Status.ToLower() px-2 py-0.5 rounded-full text-xs">
                                                        @survey.Status
                                                    </span>
                                                    <span class="bg-primary/10 text-primary text-xs px-2 py-1 rounded-full">
                                                        @survey.Responses responses
                                                    </span>
                                                </div>
                                            </div>
                                            <p class="text-xs text-muted-foreground line-clamp-1 mb-1">
                                                @survey.Description
                                            </p>
                                            <div class="flex items-center text-xs text-muted-foreground">
                                                <span>Created @survey.CreatedAt.ToString("MMM dd, yyyy")</span>
                                                <span class="mx-2">â€¢</span>
                                                <div class="flex items-center">
                                                    <div class="w-16 bg-secondary rounded-full h-1.5 mr-1">
                                                        <div class="bg-primary h-1.5 rounded-full" style="width: @(survey.CompletionRate)%"></div>
                                                    </div>
                                                    <span>@survey.CompletionRate% completed</span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="flex space-x-1 ml-4">
                                            <a href="#" class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 border border-input bg-background hover:bg-accent hover:text-accent-foreground h-8 w-8 p-0">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4"><path d="M2 12s3-7 10-7 10 7 10 7-3 7-10 7-10-7-10-7Z"></path><circle cx="12" cy="12" r="3"></circle></svg>
                                                <span class="sr-only">View</span>
                                            </a>
                                            <a asp-controller="Surveys" asp-action="Edit" asp-route-id="@survey.Id" class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 border border-input bg-background hover:bg-accent hover:text-accent-foreground h-8 w-8 p-0">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4"><path d="M17 3a2.85 2.83 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5Z"></path><path d="m15 5 4 4"></path></svg>
                                                <span class="sr-only">Edit</span>
                                            </a>
                                            <form asp-controller="Surveys" asp-action="Delete" asp-route-id="@survey.Id" method="post" class="inline">
                                                <button type="submit" class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 border border-input bg-background hover:bg-accent hover:text-destructive h-8 w-8 p-0" onclick="return confirm('Are you sure you want to delete this survey?')">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4 text-destructive"><path d="M3 6h18"></path><path d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6"></path><path d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2"></path><line x1="10" x2="10" y1="11" y2="17"></line><line x1="14" x2="14" y1="11" y2="17"></line></svg>
                                                    <span class="sr-only">Delete</span>
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                }
                else
                {
                    <div class="flex flex-col items-center justify-center p-12 text-center">
                        <div class="rounded-full bg-primary/10 p-4 mb-4">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-6 w-6 text-primary"><path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"></path><polyline points="14 2 14 8 20 8"></polyline><line x1="12" y1="18" x2="12" y2="12"></line><line x1="9" y1="15" x2="15" y2="15"></line></svg>
                        </div>
                        <h3 class="text-lg font-semibold mb-1">No surveys found</h3>
                        <p class="text-muted-foreground mb-4">Get started by creating your first survey</p>
                        <a asp-controller="Surveys" asp-action="Create" class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 bg-primary text-primary-foreground hover:bg-primary/90 h-10 px-4 py-2">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-file-plus mr-2 h-4 w-4"><path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"></path><polyline points="14 2 14 8 20 8"></polyline><line x1="12" y1="18" x2="12" y2="12"></line><line x1="9" y1="15" x2="15" y2="15"></line></svg>
                            Create Survey
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Any client-side JavaScript logic would go here
            // This mimics the interactivity from the React version
            
            // Example: Loading animation
            const showLoadingState = () => {
                // This would show a loading animation in a real application
                console.log("Loading surveys...");
            };
            
            // Example: Hover effects for buttons
            const buttons = document.querySelectorAll('.hover\\:bg-accent');
            buttons.forEach(button => {
                button.addEventListener('mouseenter', () => {
                    button.classList.add('bg-accent/10');
                });
                button.addEventListener('mouseleave', () => {
                    button.classList.remove('bg-accent/10');
                });
            });
        });
    </script>
}
