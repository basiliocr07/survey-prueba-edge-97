
@model SurveyApp.WebMvc.Models.HomeViewModel
@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<section class="w-full pt-32 pb-20 px-6">
    <div class="max-w-7xl mx-auto flex flex-col items-center text-center">
        <div class="animate-slide-down">
            <div class="inline-block px-3 py-1 mb-6 rounded-full bg-primary/10 text-primary text-sm font-medium">
                The future of surveys is here
            </div>
            <h1 class="text-4xl md:text-6xl font-bold tracking-tight mb-6">
                Survey creation & analytics made <span class="text-primary">simple</span>
            </h1>
            <p class="text-xl text-muted-foreground max-w-3xl mx-auto mb-10">
                Build beautiful surveys, collect responses, and analyze results with our intuitive platform. No coding required.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                @if (Model.IsAuthenticated)
                {
                    @if (Model.UserRole?.ToLower() == "admin")
                    {
                        <a asp-controller="Survey" asp-action="Create" class="btn btn-primary btn-lg animate-slide-up transition-all duration-300">
                            <i class="fas fa-plus-circle mr-2"></i> Create a Survey
                        </a>
                        <a asp-controller="Analytics" asp-action="Index" class="btn btn-outline btn-lg animate-slide-up transition-all duration-300 delay-100">
                            <i class="fas fa-chart-bar mr-2"></i> Explore Analytics
                        </a>
                    }
                    else if (Model.UserRole?.ToLower() == "client")
                    {
                        <a asp-controller="Suggestions" asp-action="Create" class="btn btn-primary btn-lg animate-slide-up transition-all duration-300">
                            <i class="fas fa-lightbulb mr-2"></i> Enviar Sugerencia
                        </a>
                        <a asp-controller="Requirements" asp-action="Create" class="btn btn-outline btn-lg animate-slide-up transition-all duration-300 delay-100">
                            <i class="fas fa-file-alt mr-2"></i> Enviar Requerimiento
                        </a>
                    }
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg animate-slide-up transition-all duration-300">
                        <i class="fas fa-sign-in-alt mr-2"></i> Iniciar Sesi√≥n
                    </a>
                    <a asp-controller="Account" asp-action="Register" class="btn btn-outline btn-lg animate-slide-up transition-all duration-300 delay-100">
                        <i class="fas fa-user-plus mr-2"></i> Registrarse
                    </a>
                }
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="w-full py-20 px-6 bg-accent/50">
    <div class="max-w-7xl mx-auto">
        <div class="text-center mb-16">
            <h2 class="text-3xl font-bold mb-4">Powerful Features</h2>
            <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
                Everything you need to create professional surveys and gain valuable insights
            </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            @foreach (var feature in Model.Features)
            {
                <div class="card hover-lift overflow-hidden transition-all duration-300 hover:border-primary/20 hover:bg-accent/70">
                    <div class="p-6 flex flex-col items-start">
                        <div class="p-3 rounded-lg bg-primary/10 text-primary mb-4">
                            <i class="fas @feature.Icon text-2xl"></i>
                        </div>
                        <h3 class="text-xl font-semibold mb-2">@feature.Title</h3>
                        <p class="text-muted-foreground">@feature.Description</p>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="w-full py-24 px-6">
    <div class="max-w-6xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">Ready to create your first survey?</h2>
        <p class="text-lg text-muted-foreground max-w-3xl mx-auto mb-10">
            Join thousands of users who are already collecting valuable insights with our platform.
        </p>
        @if (Model.IsAuthenticated)
        {
            @if (Model.UserRole?.ToLower() == "admin")
            {
                <a asp-controller="Survey" asp-action="Create" class="btn btn-primary btn-lg animate-pulse-slow">
                    Get Started Now
                </a>
            }
            else if (Model.UserRole?.ToLower() == "client")
            {
                <a asp-controller="ClientAccess" asp-action="Survey" class="btn btn-primary btn-lg animate-pulse-slow">
                    Respond to Surveys
                </a>
            }
        }
        else
        {
            <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg animate-pulse-slow">
                Get Started Now
            </a>
        }
    </div>
</section>
